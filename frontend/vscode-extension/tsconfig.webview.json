{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@hatchet-dev/dag-visualizer": ["./src/dag-visualizer/index.ts"]
    }
  },
  "include": [
    "src/webview/**/*.ts",
    "src/webview/**/*.tsx",
    "src/dag-visualizer/**/*.ts",
    "src/dag-visualizer/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
